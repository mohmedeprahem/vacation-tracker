@using VacationTracker.ViewModels
@model EmployeeViewModel

@{
    ViewData["Title"] = "Create Employee";
    Layout = "_AdminLayout";
}


<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center mb-5">Create an Employee</h2>

                        <form asp-controller="Employee" asp-action="Create">

                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="FullName" class="form-label" for="form3Example1cg">Name</label>
                                <input asp-for="FullName" type="text" id="form3Example1cg" class="form-control form-control-lg" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="Email" class="form-label" for="form3Example3cg">Email</label>
                                <input asp-for="Email" type="email" id="form3Example3cg" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="Password" class="form-label" for="form3Example4cg">Password</label>
                                <input asp-for="Password" type="password" id="form3Example4cg" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="ConfirmPassword" class="form-label" for="form3Example4cdg">Repeat password</label>
                                <input asp-for="ConfirmPassword" type="password" id="form3Example4cdg" class="form-control form-control-lg" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input class="btn btn-outline-success float right" type="submit" value="Create" />
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: '@TempData["Success"]',
                    confirmButtonColor: '#28a745'
                });
            </text>
        }
    </script>
}